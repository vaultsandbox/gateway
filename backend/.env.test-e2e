NODE_ENV=test
TZ=UTC

# Gateway/API configuration
VSB_GATEWAY_MODE=local
VSB_LOCAL_API_KEY=vsb-e2e-api-key-897ekhdfsklfhlsdfjklfsd9fsd
VSB_LOCAL_INBOX_DEFAULT_TTL=3600
VSB_LOCAL_INBOX_MAX_TTL=86400
VSB_LOCAL_CLEANUP_INTERVAL=120

# HTTP service (not publicly exposed during tests)
VSB_SERVER_PORT=3100
VSB_SERVER_HTTPS_ENABLED=false
VSB_SERVER_HTTPS_PORT=3443

# SMTP listener (ephemeral port)
VSB_SMTP_HOST=0.0.0.0
VSB_SMTP_PORT=0
VSB_SMTP_SECURE=false
VSB_SMTP_MAX_MESSAGE_SIZE=10485760
VSB_SMTP_SESSION_TIMEOUT=300000
VSB_SMTP_ALLOWED_RECIPIENT_DOMAINS=vaultsandbox.test
VSB_SMTP_MAX_CONNECTIONS=10
VSB_SMTP_CLOSE_TIMEOUT=5000
VSB_SMTP_DISABLED_COMMANDS=VRFY,EXPN,ETRN,TURN,STARTTLS
VSB_SMTP_DISABLE_PIPELINING=false
VSB_SMTP_EARLY_TALKER_DELAY=0
VSB_SMTP_BANNER=VaultSandbox SMTP Harness
VSB_SMTP_RATE_LIMIT_ENABLED=false
VSB_SMTP_RATE_LIMIT_MAX_EMAILS=30
VSB_SMTP_RATE_LIMIT_DURATION=60

# Storage
VSB_DATA_PATH=./data/e2e

# Optional modules disabled
VSB_CERT_ENABLED=false
VSB_ORCHESTRATION_ENABLED=false

# SDK development mode for test endpoints
VSB_SDK_DEVELOPMENT=true

# Encryption policy for testing (enabled allows per-inbox override)
VSB_ENCRYPTION_ENABLED=enabled

# Webhook configuration for testing
VSB_WEBHOOK_ENABLED=true
VSB_WEBHOOK_ALLOW_HTTP=true
VSB_WEBHOOK_MAX_GLOBAL_WEBHOOKS=10
VSB_WEBHOOK_MAX_INBOX_WEBHOOKS=5
VSB_WEBHOOK_REQUIRE_AUTH_DEFAULT=false

# Chaos configuration
VSB_CHAOS_ENABLED=true