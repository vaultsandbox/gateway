{
  "name": "vaultsandbox-gateway-backend",
  "version": "0.9.0",
  "description": "Secure receive-only SMTP server with automatic TLS, SPF/DKIM/DMARC validation, and zero-knowledge storage",
  "author": "Antero",
  "private": false,
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/vaultsandbox/gateway.git",
    "directory": "backend"
  },
  "bugs": {
    "url": "https://github.com/vaultsandbox/gateway/issues"
  },
  "homepage": "https://github.com/vaultsandbox/gateway#readme",
  "keywords": [
    "smtp",
    "email",
    "testing",
    "qa",
    "tls",
    "spf",
    "dkim",
    "dmarc",
    "acme",
    "letsencrypt",
    "docker",
    "nestjs",
    "zero-knowledge",
    "encryption"
  ],
  "scripts": {
    "build": "nest build",
    "build:frontend": "cd ../frontend && npm run build",
    "build:all": "npm run build:frontend && npm run build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./jest-e2e.json",
    "test:e2e:cov": "jest --config ./jest-e2e.json --coverage",
    "test:cov:all": "npm run test:cov && npm run test:e2e:cov && node scripts/merge-coverage.js",
    "coverage:merge": "node scripts/merge-coverage.js",
    "coverage:check": "node scripts/check-coverage.js",
    "coverage:reset": "rm -rf coverage coverage-e2e coverage-merged .nyc_output_merge",
    "coverage:ci": "npm run test:cov:all && npm run coverage:check"
  },
  "dependencies": {
    "@nestjs/axios": "^4.0.1",
    "@nestjs/common": "^11.1.12",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.1.12",
    "@nestjs/event-emitter": "^3.0.1",
    "@nestjs/platform-express": "^11.1.12",
    "@nestjs/schedule": "^5.0.0",
    "@nestjs/serve-static": "^5.0.4",
    "@nestjs/swagger": "^11.2.3",
    "@nestjs/terminus": "^11.0.0",
    "@nestjs/throttler": "^6.5.0",
    "@noble/post-quantum": "^0.5.4",
    "acme-client": "^5.4.0",
    "axios": "^1.13.2",
    "chokidar": "^4.0.3",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "mailauth": "^4.12.0",
    "mailparser": "^3.9.1",
    "rate-limiter-flexible": "^8.2.1",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "smtp-server": "^3.17.1"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.18.0",
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.9",
    "@nestjs/testing": "^11.1.12",
    "@types/express": "^5.0.6",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.10.7",
    "@types/smtp-server": "^3.5.12",
    "@types/supertest": "^6.0.2",
    "dotenv": "^17.2.3",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.2",
    "globals": "^16.0.0",
    "istanbul-lib-coverage": "^3.2.2",
    "istanbul-lib-report": "^3.0.1",
    "istanbul-lib-source-maps": "^5.0.6",
    "istanbul-reports": "^3.2.0",
    "jest": "^30.0.0",
    "lcov-parse": "^1.0.0",
    "lcov-result-merger": "^5.0.1",
    "open-cli": "^8.0.0",
    "prettier": "^3.4.2",
    "smtp-connection": "^4.0.2",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "transformIgnorePatterns": [
      "node_modules/(?!@noble/)"
    ],
    "coverageProvider": "v8",
    "setupFilesAfterEnv": [
      "<rootDir>/../test/jest.setup.ts"
    ],
    "collectCoverageFrom": [
      "**/*.(t|j)s",
      "!**/*.spec.ts",
      "!**/*.module.ts",
      "!main.ts",
      "!**/*.interface.ts",
      "!**/interfaces.ts",
      "!**/*.dto.ts",
      "!**/*.constants.ts",
      "!**/*.tokens.ts",
      "!**/*.types.ts",
      "!**/index.ts"
    ],
    "coverageDirectory": "../coverage",
    "coverageReporters": [
      "text",
      "text-summary",
      "lcov",
      "html",
      "json",
      "json-summary"
    ],
    "testEnvironment": "node"
  },
  "overrides": {
    "nodemailer": "7.0.11",
    "glob": "11.1.0",
    "tar": "7.5.2"
  }
}
